{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "NSIL Resonance Webhook Schema",
  "description": "Schema for NSIL resonance webhook events with metric validation",
  "type": "object",
  "required": ["event_type", "timestamp", "payload"],
  "properties": {
    "event_type": {
      "type": "string",
      "enum": ["resonance_detected", "metric_threshold", "integration_check", "phase_completion"],
      "description": "Type of webhook event"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of the event"
    },
    "payload": {
      "type": "object",
      "required": ["source", "data"],
      "properties": {
        "source": {
          "type": "string",
          "description": "Source system or component"
        },
        "data": {
          "type": "object",
          "properties": {
            "resonance_level": {
              "type": "number",
              "minimum": 0,
              "maximum": 100
            },
            "metric_values": {
              "type": "object",
              "additionalProperties": {
                "type": "number"
              }
            },
            "status": {
              "type": "string",
              "enum": ["success", "warning", "error", "pending"]
            },
            "message": {
              "type": "string"
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string",
          "default": "1.0.0"
        },
        "environment": {
          "type": "string",
          "enum": ["development", "staging", "production"]
        }
      }
    }
  }
}
